# Environment Variables for Voice AI Chat Application
# Copy this file to .env and fill in your actual values

# Azure OpenAI Configuration (Required)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_MODEL=gpt-4

# Azure Speech Service Configuration (Required)
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=eastus

# Azure AI Agent Service Configuration (Optional - for evaluation features)
AZURE_AI_FOUNDRY_PROJECT_ENDPOINT=https://your-project-name.region.api.azureml.ms
AZURE_EVALUATION_AGENT_ID=your-custom-agent-id

# Authentication Configuration (Optional - set AUTH_ENABLED=true to enable)
AUTH_ENABLED=false
SESSION_SECRET=your-64-character-session-secret-here-make-it-long-and-random
SESSION_DURATION_HOURS=4
RATE_LIMIT_PER_MINUTE=100
AUTH_USERS=[{"username":"demo","password":"demo123"},{"username":"admin","password":"admin456"}]

# Message Configuration (Optional)
MESSAGE_WINDOW_SIZE=20

# Production Authentication (Optional - choose one method)
# Service Principal Method:
AZURE_TENANT_ID=12345678-1234-1234-1234-123456789012
AZURE_CLIENT_ID=87654321-4321-4321-4321-210987654321
AZURE_CLIENT_SECRET=your-secret-value-here

# Managed Identity Method: (No additional variables needed - automatically detected)
